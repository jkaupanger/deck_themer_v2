from sample.helpers import *

aminatou_decklists, aminatou_corpus = corpus_maker(
    'C:\\Users\\Jamesson\\Documents\\GitHub\\deck_themer_v2\\CSV_files\\aminatou_tdm.csv')  # Deck files are somewhat proprietary, so this field has been left blank.

aminatou_lda = create_lda(k=11, corpus=aminatou_corpus)

for i in range(0, 1001, 100):
    aminatou_lda.burn_in = 100
    aminatou_lda.train(0)
    aminatou_lda.train(100)

aminatou_topics = lda_topic_outputter(aminatou_lda, card_count=60, to_excel=True, fname='aminatou_k11_lda_topics.xlsx')

print('Done')
